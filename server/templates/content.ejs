<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ваш контент</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        #worksList {
            list-style: none;
            padding: 0;
        }
        .workItem {
            margin-bottom: 20px;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }
        .reviewsModal {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            z-index: 1000;
        }
        .overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 999;
        }
    </style>
</head>
<body>
<h1>Пользовательские работы</h1>
<ul id="worksList"></ul>

<div class="overlay" id="overlay"></div>
<div class="reviewsModal" id="reviewsModal">
    <h2>Отзывы</h2>
    <ul id="reviewsList"></ul>
    <button onclick="closeModal()">Закрыть</button>
</div>

<form method="get" action="/">
    <button type="submit" name="logout">На главную</button>
</form>


<script>
    function fetchData() {
        const worksList = document.getElementById('worksList');
        worksList.innerHTML = '';

        const xhr = new XMLHttpRequest();
        xhr.open('GET', '/api/content', true);

        xhr.onreadystatechange = function() {
            if (xhr.readyState === 4) {
                if (xhr.status === 200) {
                    const works = JSON.parse(xhr.responseText);
                    displayWorks(works);
                } else {
                    console.error('Ошибка при получении данных:', xhr.statusText);
                }
            }
        };

        xhr.send();
    }

    function displayWorks(works) {
        const worksList = document.getElementById('worksList');

        works.forEach((work, index) => {
            const workItem = document.createElement('li');
            workItem.classList.add('workItem');
            workItem.innerHTML = `<strong>${work.name}</strong>:<br>${work.content.replace(/\n/g, '<br>')}`;

            const showReviewsButton = document.createElement('button');
            showReviewsButton.textContent = 'Показать отзывы';
            showReviewsButton.addEventListener('click', function() {
                showReviewsModal(work.feedbacks);
            });

            workItem.appendChild(showReviewsButton);
            worksList.appendChild(workItem);
        });
    }

    function showReviewsModal(reviews) {
        const reviewsList = document.getElementById('reviewsList');
        reviewsList.innerHTML = '';

        reviews.forEach((review, index) => {
            const reviewItem = document.createElement('li');
            reviewItem.innerHTML = `<strong>${review.reviewer}</strong>: ${review.comment} (Оценка: ${review.mark})`;
            reviewsList.appendChild(reviewItem);
        });

        const reviewsModal = document.getElementById('reviewsModal');
        const overlay = document.getElementById('overlay');
        reviewsModal.style.display = 'block';
        overlay.style.display = 'block';
    }

    function closeModal() {
        const reviewsModal = document.getElementById('reviewsModal');
        const overlay = document.getElementById('overlay');
        reviewsModal.style.display = 'none';
        overlay.style.display = 'none';
    }

    document.addEventListener('DOMContentLoaded', fetchData);
</script>
</body>
</html>
