<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Пользовательские работы и отзывы</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .workItem {
            margin-bottom: 20px;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            cursor: pointer;
        }
        .reviewsModal {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            z-index: 1000;
        }
        .overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 999;
        }
    </style>
</head>
<body>
<h1>Пользовательские работы и отзывы</h1>
<div id="worksList"></div>

<div class="overlay" id="overlay"></div>
<div class="reviewsModal" id="reviewsModal">
    <h2>Отзывы</h2>
    <div id="reviewsList"></div>
    <div>
        <label for="rating">Оценка:</label>
        <input type="number" id="rating" min="1" max="5" required>
    </div>
    <div>
        <label for="comment">Комментарий:</label>
        <textarea id="comment" rows="3" required></textarea>
    </div>
    <button onclick="submitReview()">Отправить отзыв</button>
    <button onclick="closeModal()">Закрыть</button>
</div>

<form method="get" action="/">
    <button type="submit" name="logout">На главную</button>
</form>

<script>
    function fetchData() {
        const worksList = document.getElementById('worksList');

        fetch('/api/feedback')
            .then(response => response.json())
            .then(works => displayWorks(works))
            .catch(error => console.error('Ошибка при получении данных:', error));
    }

    function displayWorks(works) {
        const worksList = document.getElementById('worksList');

        works.forEach((work, index) => {
            const workItem = document.createElement('div');
            workItem.classList.add('workItem');
            workItem.innerHTML = `<strong>${work.name}</strong> (Автор: ${work.ownerName})<br>${work.content.replace(/\n/g, '<br>')}<br>`;
            workItem.onclick = function() {
                showReviewsModal(work);
            };

            worksList.appendChild(workItem);
        });
    }

    function showReviewsModal(work) {
        const reviewsList = document.getElementById('reviewsList');
        reviewsList.innerHTML = '';

        work.feedbacks.forEach((review, index) => {
            const reviewItem = document.createElement('div');
            reviewItem.innerHTML = `<strong>${review.reviewer}</strong>: ${review.comment} (Оценка: ${review.mark})`;
            reviewsList.appendChild(reviewItem);
        });

        const reviewsModal = document.getElementById('reviewsModal');
        const overlay = document.getElementById('overlay');
        reviewsModal.style.display = 'block';
        overlay.style.display = 'block';

        // Сохраняем идентификатор работы в глобальной переменной
        window.currentWorkId = work.id;
    }

    function closeModal() {
        const reviewsModal = document.getElementById('reviewsModal');
        const overlay = document.getElementById('overlay');
        reviewsModal.style.display = 'none';
        overlay.style.display = 'none';
    }

    function submitReview() {
        const rating = document.getElementById('rating').value;
        const comment = document.getElementById('comment').value;

        fetch('/api/feedback', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                contentId: window.currentWorkId,
                mark: rating,
                comment: comment,
            }),
        })
            .then(response => response.json())
            .then(data => {
                console.log('Отзыв успешно отправлен:', data);
                // Обновляем отзывы после успешной отправки
                closeModal();
                fetchData();
            })
            .catch(error => console.error('Ошибка при отправке отзыва:', error));
    }

    document.addEventListener('DOMContentLoaded', fetchData);
</script>
</body>
</html>